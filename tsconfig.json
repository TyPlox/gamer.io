{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "lib": [
            "dom",
            "es5",
            "es6"
        ],
        "rootDir": "src",
        "outDir": "dist",
        "sourceMap": false,
        "importHelpers": true,
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "typeRoots": ["node_modules/@types"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}